{
  "name": "hg-launcher",
  "version": "2.0.2",
  "description": "hg.studio launcher",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.hg.launcher",
    "productName": "HG Launcher",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "src/**/*",
      "package.json",
      "node_modules/**/*",
      ".env"
    ],
    "asar": true
  },
  "author": "hg.studio",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "bcryptjs": "^3.0.3",
    "discord-rpc": "^4.0.1",
    "dotenv": "^17.2.3",
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^5.0.5",
    "mysql2": "^3.15.3",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
